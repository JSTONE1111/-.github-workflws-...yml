name: Build, Changelog & Release PDF

on:
  push:
    branches: [ main ]
    paths:
      - 'conversation.txt'
      - 'make_pdf.py'
      - '.github/workflows/build-release.yml'

jobs:
  build-release:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Needed for changelog comparison

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.12'

      - name: Install dependencies
        run: pip install reportlab

      - name: Generate PDF
        run: python make_pdf.py

      - name: Determine version
        id: version
        run: |
          echo "VERSION=v$(date +'%Y.%m.%d.%H%M%S')" >> $GITHUB_ENV
          echo "version=$(date +'%Y.%m.%d.%H%M%S')" >> $GITHUB_OUTPUT

      - name: Generate changelog
        id: changelog
        run: |
          git log -1 --pretty=format:"%h - %s (%ci)" > changelog.txt
          echo "CHANGELOG=$(cat changelog.txt)" >> $GITHUB_ENV

      - name: Upload PDF as artifact
        uses: actions/upload-artifact@v4
        with:
          name: Jason_Simpson_AI_Ledger_Automation_Guide_FULL
          path: Jason_Simpson_AI_Ledger_Automation_Guide_FULL.pdf

      - name: Create GitHub Release
        id: create_release
        uses: softprops/action-gh-release@v2
        with:
          tag_name: "${{ env.VERSION }}"
          name: "AI Ledger Automation Release ${{ env.VERSION }}"
          body: |
            ## ðŸš€ Auto-generated Release
            **Changelog:**
            ${{ env.CHANGELOG }}
            
            **Contents:**
            - Full conversation + all code
            - Deployment scripts
            - Updated configuration and automation flow
          draft: false
          prerelease: false
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Attach PDF to Release
        uses: softprops/action-gh-release@v2
        with:
          tag_name: "${{ env.VERSION }}"
          files: Jason_Simpson_AI_Ledger_Automation_Guide_FULL.pdf
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}